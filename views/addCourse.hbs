        <form method="post" action="/courses/add">

            <fieldset>
                <legend>Course Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Course Code:</label>
                            <input class="form-control" name="courseCode" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
